# AutoML System Environment Variables
# Copy this file to .env and fill in your values

# Logging
AUTOML_LOG_LEVEL=INFO
AUTOML_LOG_FILE=automl.log

# MLflow Tracking
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=automl_experiments

# Data Paths
AUTOML_DATA_DIR=./data
AUTOML_MODELS_DIR=./models
AUTOML_RESULTS_DIR=./results

# Performance
AUTOML_N_JOBS=-1
AUTOML_MEMORY_LIMIT_GB=16

# Model Training
AUTOML_DEFAULT_TIMEOUT=3600
AUTOML_CV_FOLDS=5
AUTOML_TEST_SIZE=0.2

# Hyperparameter Optimization
AUTOML_HPO_TRIALS=100
AUTOML_HPO_TIMEOUT=1800

# API (for future use)
AUTOML_API_HOST=0.0.0.0
AUTOML_API_PORT=8000

# Database (for future use)
DATABASE_URL=sqlite:///./automl.db
